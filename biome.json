{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["**/node_modules/**","dist/**"],
		"include": ["*.*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"a11y": { "useKeyWithClickEvents": "off" },
			"style": { "noUselessElse": "off" },
			"correctness": { "noUnusedImports": "info" }
		},
		"ignore": ["tsconfig.*"]
	}
}
